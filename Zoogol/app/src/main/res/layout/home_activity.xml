<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#4fa6c2"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_navigationDrawer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"

                android:layout_centerVertical="true"
                android:src="@drawable/menu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_navigationDrawer"
                android:src="@drawable/small_logo" />

            <RelativeLayout
                android:id="@+id/rl_gernal_notification"
                android:layout_width="wrap_content"

                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/rl_cash_back_notification">


                <ImageView

                    android:id="@+id/iv_gernal_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"

                    android:src="@drawable/generalnotification" />


                <TextView
                    android:id="@+id/tv_gernal_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circular_image"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cash_back_notification"
                android:layout_width="wrap_content"

                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/rl_friend_notification">

                <ImageView

                    android:id="@+id/iv_cash_back_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"

                    android:src="@drawable/cashbacknotification" />


                <TextView
                    android:id="@+id/tv_cash_back_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circular_image"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_friend_notification"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp">


                <ImageView
                    android:id="@+id/iv_friend_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"

                    android:src="@drawable/friendsnotification" />

                <TextView
                    android:id="@+id/tv_friend_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/circular_image"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/containerRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_topbar"
            android:layout_above="@+id/ll_belowtab"></RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_belowtab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#606062"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_home_selected" />

            <ImageView
                android:id="@+id/iv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_online" />

            <ImageView
                android:id="@+id/iv_instore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_instore" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_account" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_share" />

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"

                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:src="@drawable/new_tab_help" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_drawer_list"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="#e6e7e8"
            android:padding="10dp">


            <com.pkmmte.view.CircularImageView
                android:id="@+id/circular_profilePicDrawer"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user_pic"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="0dp"
                app:shadow="false" />

            <TextView
                android:id="@+id/tv_nameZMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/circular_profilePicDrawer"
                android:text="Name of ZMP"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nameZMP"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_toRightOf="@+id/circular_profilePicDrawer"
                android:text="Name of ZMP"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_zkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nameZMP"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_toRightOf="@+id/circular_profilePicDrawer"
                android:text="Zkey of partner"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="220dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"

                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Chandigarh" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/navigation_home" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Home" />

        </LinearLayout>


        <ExpandableListView

            android:id="@+id/navigation_expandablelist"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:background="#ffffff" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>





